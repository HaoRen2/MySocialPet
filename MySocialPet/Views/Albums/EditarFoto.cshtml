@model MySocialPet.Models.ViewModel.Albums.EditarFotoViewModel

@{
    ViewData["Title"] = "Editar Foto";
    string base64Image = null;

    if (Model.NuevaFoto != null && Model.NuevaFoto.Length > 0)
    {
        base64Image = $"data:image/png;base64,{Convert.ToBase64String(Model.NuevaFoto)}";
    }
}

<div class="container pt-nav mb-5">
    <h2>Editar Foto</h2>

    @if (!string.IsNullOrEmpty(base64Image))
    {
        <img src="@base64Image" class="img-fluid mb-3" style="max-height: 400px; object-fit: contain;" />
    }
    else
    {
        <p><em>No hay imagen disponible</em></p>
    }

    <form asp-action="EditarFoto" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="IdFoto" />
        <input type="hidden" asp-for="IdAlbum" />

        <div class="mb-3">
            <label asp-for="Titulo" class="form-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="nuevaFoto" class="form-label">Cambiar foto (opcional)</label>
            <input type="file" name="nuevaFoto" id="nuevaFoto" class="form-control" accept="image/*" />
        </div>

        @* --- Bloque de mascotas etiquetadas --- *@
        @if (Model.MascotasDisponibles != null && Model.MascotasDisponibles.Any())
        {
            <div class="mb-3">
                <label class="form-label">Mascotas Etiquetadas</label>
                <div>
                    @foreach (var mascota in Model.MascotasDisponibles)
                    {
                        var mascotaId = int.Parse(mascota.Value);
                        var isChecked = Model.MascotasEtiquetadasIds != null &&
                        Model.MascotasEtiquetadasIds.Contains(mascotaId);

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox"
                                   name="MascotasEtiquetadasIds"
                                   value="@mascota.Value"
                                   id="mascota_@mascota.Value"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="mascota_@mascota.Value">@mascota.Text</label>
                        </div>
                    }
                </div>
            </div>
        }

        <button type="submit" class="btn btn-verde">Guardar cambios</button>
        <a href="javascript:history.back()" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
