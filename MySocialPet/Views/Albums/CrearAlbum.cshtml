<!-- Modified CrearAlbum.cshtml -->
<!-- Note: You said it's fine, but I added some Bootstrap improvements for better styling, like form validation classes and a cleaner layout. Kept the colors neutral. The modal is commented out as in original, but if you want to enable it, it can be. -->
@model MySocialPet.Models.ViewModel.Albums.CrearAlbumViewModel

@{
    ViewData["Title"] = "Crear Álbum";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
    <form asp-action="CrearAlbum" asp-controller="Albums" method="post" enctype="multipart/form-data">
        <div class="mb-3">
                    <label for="nombreAlbum" class="form-label fw-bold">Nombre del Álbum</label>
                    <input type="text" class="form-control form-control-lg" id="nombreAlbum" name="nombreAlbum" required placeholder="Ej: Vacaciones con mi perro">
                    <div class="invalid-feedback">Por favor, ingresa un nombre para el álbum.</div>
        </div>

                <!-- Uncomment if you want to add photo upload here, but as per your code, it's not active -->
       @* <div class="mb-3">
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalInsertarFoto">
                Insertar Foto
            </button>
                </div> *@

                <button type="submit" class="btn btn-primary btn-lg w-100">Crear Álbum</button>
    </form>
</div>
    </div>
</div>

<!-- Modal: Insertar Foto (kept as is, but improved styling) -->
<div class="modal fade" id="modalInsertarFoto" tabindex="-1" aria-labelledby="modalInsertarFotoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="InsertarFoto" method="post" enctype="multipart/form-data">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalInsertarFotoLabel">Insertar Foto al Álbum</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Título</label>
                        <input type="text" name="Titulo" class="form-control" required placeholder="Ej: Mi gato jugando" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Foto</label>
                        <input type="file" name="Foto" class="form-control" accept="image/*" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Descripción</label>
                        <textarea name="Descripcion" class="form-control" rows="3" placeholder="Describe la foto..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Fecha</label>
                        <input type="date" name="Fecha" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mascotas Etiquetadas</label>
                        <select class="form-select" name="MascotasEtiquetadasIds" multiple>
                            <!-- Populate dynamically if needed -->
                        </select>
                        <small class="text-muted">Mantén Ctrl (Windows) o Cmd (Mac) para seleccionar múltiples.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar Foto</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
