@model MySocialPet.Models.ViewModel.Albums.ListaAlbumViewModel

@{
    ViewData["Title"] = "Mis Álbumes";
}

<div class="container mb-5">
    <h2>Mis Álbumes</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var album in Model.ListAlbums)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                    @if (album.FotoReciente != null && album.FotoReciente.Length > 0)
                    {
                        var base64Image = "data:image/jpeg;base64," + Convert.ToBase64String(album.FotoReciente);
                            <img src="@base64Image" class="card-img-top" alt="Foto de @album.NombreAlbum" style="max-height: 200px; object-fit: cover;" />
                    }else
                    {
                        <img src="foto.jpg" class="card-img-top" alt="Sin foto" style="max-height: 200px; object-fit: cover;" />
                    }
                    <h5 class="card-title">@album.NombreAlbum</h5>
                        <p class="card-text">
                            <strong>ID Álbum:</strong> @album.IdAlbum<br />
                            <strong>ID Usuario:</strong> @album.IdUsuario
                        </p>

                        <a href="@Url.Action("DetailsAlbum", "Albums", new { idAlbum = album.IdAlbum })" class="btn btn-verde mt-2">
                            Ver Fotos
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Tarjeta para crear nuevo álbum -->
        <div class="col">
            <div class="card h-100 text-center shadow-sm" style="min-height: 300px;">
                <a href="@Url.Action("CrearAlbum", "Albums")" class="text-decoration-none text-dark h-100 w-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center h-100">
                        <div class="d-flex justify-content-center align-items-center mb-3" style="width: 100px; height: 100px;">
                            <span style="font-size: 3rem; font-weight: bold;">+</span>
                        </div>
                        <p class="card-text fw-semibold">Crear nuevo álbum</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
