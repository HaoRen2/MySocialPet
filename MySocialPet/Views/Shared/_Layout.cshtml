<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MySocialPet</title>

    <!-- Bootstrap (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Global & Navbar -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">

    <!-- Fancybox (CSS) -->
    <link rel="stylesheet" href="@("https://cdn.jsdelivr.net/npm/@fancyapps/ui@6.0/dist/fancybox/fancybox.css")" />


    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- NAVBAR -->
        @await Component.InvokeAsync("Navbar")
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer text-white pt-5 pb-4">
        <div class="container text-center text-md-start">
            <div class="row justify-content-evenly">
                <!-- Logo / Descripción -->
                <div class="col-md-3 col-lg-4 col-xl-3 mb-4">
                    <h5>MySocialPet</h5>
                    <p>
                        Conecta con quienes también consideran a sus mascotas parte de la familia.
                        Compartimos experiencias, consejos de cuidado y momentos inolvidables.
                    </p>

                </div>

                <!-- Contacto -->
                <div class="col-md-4 col-lg-3 col-xl-3 mb-4">
                    <h6>Contacto</h6>
                    <ul class="list-unstyled">
                        <li>📧 contacto@mysocialpet.es</li>
                        <li>📞 +34 600 000 000</li>
                        <li>📍 Barcelona, España</li>
                    </ul>
                </div>

                <!-- Enlaces -->
                <div class="col-md-2 col-lg-2 col-xl-2 mb-4">
                    <h6>Enlaces</h6>
                    <ul class="list-unstyled">
                        <li><a href="#sobre">Sobre</a></li>
                        <li><a href="#caracteristicas">Características</a></li>
                        <li><a href="#comunidad">Comunidad</a></li>
                        <li><a href="#contacto">Contacto</a></li>
                    </ul>
                </div>

                <!-- Legal -->
                <div class="col-md-3 col-lg-3 col-xl-2 mb-4">
                    <h6>Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Política de privacidad</a></li>
                        <li><a href="#">Términos y condiciones</a></li>
                        <li><a href="#">Cookies</a></li>
                    </ul>
                </div>
            </div>

            <hr class="mb-3">

            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; 2025 MySocialPet. Todos los derechos reservados.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="me-3"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="me-3"><i class="bi bi-twitter"></i></a>
                </div>
            </div>
        </div>
    </footer>



    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="@("https://cdn.jsdelivr.net/npm/@fancyapps/ui@6.0/dist/fancybox/fancybox.umd.js")"></script>
    <!-- Contenedor de Bootstrap Toasts -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 2000;">
        <div id="toast-container" class="toast-container top-0 end-0"></div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
