<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MySocialPet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg px-5 py-4 fixed-top navbar-main">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand d-flex align-items-center text-white fw-bold fs-1 me-3" href="#">
                    MySocialPet 🐾
                </a>

                <!-- LOGIN + HAMBURGUESA en móvil -->
                <div class="d-flex align-items-center d-lg-none">
                    <a href="@Url.Action("Index","Login")" class="btn btn-login fs-4 me-4">&nbsp;Login&nbsp;</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <i class="bi bi-list menu-icon" id="toggleSidebar"></i>
                    </button>
                </div>

                <!-- MENÚ -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav me-3">
                        <li class="nav-item nav-section">
                            <a class="nav-link text-white fw-bold fs-4" href="#sobre">Sobre</a>
                        </li>
                        <li class="nav-item nav-section">
                            <a class="nav-link text-white fw-bold fs-4" href="#caracteristicas">Características</a>
                        </li>
                        <li class="nav-item nav-section">
                            <a class="nav-link text-white fw-bold fs-4" href="#comunidad">Comunidad</a>
                        </li>
                        <li class="nav-item nav-section">
                            <a class="nav-link text-white fw-bold fs-4" href="#contacto">Contacto</a>
                        </li>
                    </ul>
                    <a href="@Url.Action("Index", "Login")" class="btn btn-login fs-4 ms-2 d-none d-lg-inline">&nbsp;Login&nbsp;</a>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MySocialPet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
