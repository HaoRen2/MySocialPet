@model MySocialPet.Models.ViewModel.Foros.DetailDiscusionViewModel

@{
    ViewData["Title"] = "Detalles del hilo";
}

<div class="bg-foro pb-5">
    <div class="container">
        <div style="height: 15vh;"></div>
        <div class="row">
            <div class="col-8">
                <div class="bg-white shadow rounded-15 border-bottom-0">
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h1 class="fs-3 fw-bold text-uppercase m-0">@Model.DiscusionMensajes.Titulo</h1>
                                <p class="text-muted small mb-0">@Model.DiscusionMensajes.Descripcion</p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3 bg-lightgreen py-2 px-3">
                        <h2 class="fs-4 fw-bold m-0">Mensajes</h2>
                        <div class="dropdown">
                            <span class="btn btn-sm dropdown-toggle text-white"
                                  style="background-color:#9BB29D; border-color:#9BB29D;"
                                  onmouseover="this.style.backgroundColor='#6C8F72'"
                                  onmouseout="this.style.backgroundColor='#9BB29D'"
                                  type="button" id="dropdownFilter" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-funnel"></i>
                            </span>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownFilter">
                                <li>
                                    <a class="dropdown-item"
                                       asp-action="HiloDetails"
                                       asp-route-slug="@Model.Slug"
                                       asp-route-foroId="@Model.IdForo"
                                       asp-route-discId="@Model.IdDiscusion"
                                       asp-route-ordenarPor="recientes">Más recientes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-action="HiloDetails"
                                       asp-route-slug="@Model.Slug"
                                       asp-route-foroId="@Model.IdForo"
                                       asp-route-discId="@Model.IdDiscusion"
                                       asp-route-ordenarPor="antiguos">Más antiguos</a>
                                </li>
                                <!-- Más tarde se implementa esto:
                                <li><a class="dropdown-item" href="#" data-filter="mensajes">Más mensajes</a></li>
                                <li><a class="dropdown-item" href="#" data-filter="sin-responder">Sin responder</a></li>
                                -->
                            </ul>
                        </div>
                    </div>
                </div>

                @{
                    if (Model.DiscusionMensajes != null && Model.DiscusionMensajes.Mensajes != null && Model.DiscusionMensajes.Mensajes.Any())
                    {
                        @for (int i = 0; i < Model.DiscusionMensajes.Mensajes.Count; i++)
                        {
                            var item = Model.DiscusionMensajes.Mensajes.ElementAt(i);

                            <div class="bg-white shadow">
                                <div class="list-group list-group-flush p-3 mb-3">
                                    <div class="py-2">
                                        <div class="list-group-item d-flex justify-content-between align-items-center py-1 border-0">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    @if (item.AvatarFoto != null)
                                                    {
                                                        <img class="rounded-circle" width="50px" height="50px" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.AvatarFoto))" alt="Foto de perfil" />
                                                    }
                                                    else
                                                    {
                                                        <img class="rounded-circle" width="50px" src="@Url.Content("~/src/DefaultAvatar/Perro.png")" alt="Foto de perfil por defecto" />
                                                    }
                                                </div>
                                                <div>
                                                    @if (item.Username != null)
                                                    {
                                                        <h5 class="mb-0 fw-bold">@item.Username</h5>
                                                        <p class="text-muted small mb-0">MySocialPet: Usuario</p>
                                                    }
                                                    else
                                                    {
                                                        <h5 class="mb-0 fw-bold">Usuario desconocido</h5>
                                                        <p class="text-muted small mb-0">MySocialPet: Usuario</p>
                                                    }
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    @{
                                                        string fechaTexto;
                                                        var fechaLocal = item.FechaEnvio.ToLocalTime();

                                                        if (fechaLocal.Date == DateTime.Now.Date)
                                                        {
                                                            fechaTexto = $"Hoy {fechaLocal:HH:mm}";
                                                        }
                                                        else if (fechaLocal.Date == DateTime.Now.AddDays(-1).Date)
                                                        {
                                                            fechaTexto = $"Ayer {fechaLocal:HH:mm}";
                                                        }
                                                        else
                                                        {
                                                            fechaTexto = fechaLocal.ToString("dd/MM/yyyy HH:mm");
                                                        }
                                                    }

                                                    <p class="text-muted small mb-0 me-1 d-none d-sm-block">@fechaTexto</p>

                                                    <p class="text-muted small mb-0 me-1 d-none d-sm-block">Mensaje <span class="text-muted me-3"># @item.IdMensaje</span></p>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        @if (item.Imagen != false)
                                        {
                                            <img style="cursor:pointer;"
                                                 class="m-4 img-thumbnail img-clickable"
                                                 width="150px"
                                                 src="@Url.Action("ImagenMensaje", "Foro", new { id = item.IdMensaje })"
                                                 loading="lazy"
                                                 alt="Imagen del mensaje"
                                                 data-full="@Url.Action("ImagenMensaje", "Foro", new { id = item.IdMensaje })" />


                                        }

                                        <p>@item.ContenidoMensaje</p>
                                        @if (User.Identity != null && User.Identity.IsAuthenticated && item.Username == User.Identity.Name)
                                        {
                                            @using (Html.BeginForm("EliminarMensaje", "Foro", new { id = item.IdMensaje }, FormMethod.Post, true, new { style = "display:inline;" }))
                                            {
                                                //@Html.AntiForgeryToken()
                                                <button type="submit" class="text-danger btn-sm p-1 ms-2 border-0 bg-transparent"
                                                        onclick="return confirm('¿Estás seguro de que quieres eliminar este mensaje?');">
                                                    <i. class="bi bi-trash"></i.> Eliminar
                                                </button>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-white shadow">
                            <div class="list-group list-group-flush p-3 mb-3">
                                <div class="p-3">
                                    <p>Aún no hay discusiones en este foro. ¡Sé el primero en iniciar una!</p>
                                </div>
                            </div>
                        </div>
                    }
                }

                <div class="row bg-white shadow mx-0 py-3 rounded-top rounded-15 border-top-0 ">
                    <div class="d-flex justify-content-around">
                        <a asp-action="Hilos"
                           asp-route-slug="@Model.Slug"
                           class="text-decoration-none btn btn-verde border-1 border-verde">
                            <i class="bi bi-arrow-left ">Volver</i>
                        </a>
                        @if (ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mt-4">
                                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="HiloDetails"
                                           asp-route-slug="@Model.Slug"
                                           asp-route-foroId="@Model.IdForo"
                                           asp-route-discId="@Model.IdDiscusion"
                                           asp-route-ordenarPor="@Context.Request.Query["ordenarPor"]"
                                           asp-route-page="@(ViewBag.CurrentPage - 1)">
                                            Anterior
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               asp-action="HiloDetails"
                                               asp-route-slug="@Model.Slug"
                                               asp-route-foroId="@Model.IdForo"
                                               asp-route-discId="@Model.IdDiscusion"
                                               asp-route-ordenarPor="@Context.Request.Query["ordenarPor"]"
                                               asp-route-page="@i">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="HiloDetails"
                                           asp-route-slug="@Model.Slug"
                                           asp-route-foroId="@Model.IdForo"
                                           asp-route-discId="@Model.IdDiscusion"
                                           asp-route-ordenarPor="@Context.Request.Query["ordenarPor"]"
                                           asp-route-page="@(ViewBag.CurrentPage + 1)">
                                            Siguiente
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }

                        <a asp-action="EnviarMensaje"
                           asp-route-slug="@Model.Slug"
                           asp-route-foroId="@Model.IdForo"
                           asp-route-discId="@Model.IdDiscusion"
                           class="btn primary border-1 border-verde">
                            Nuevo Mensaje
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="bg-white shadow rounded-15 p-4">
                    <img style="background-image: var(--trending_icon); height: 28px; width: 28px; margin-right: 4px" src="@Url.Content("~/src/foro/icons/Fire.svg")" class="d-inline mb-3" alt="Persona enviando mensaje desde el móvil" />
                    <h3 class="d-inline">Trending</h3>
                    <p style="color: #a4a4a4">Los hilos del momento en MySocialPet</p>
                    @if (Model.Tendencias != null && Model.Tendencias.Any())
                    {
                        <ul class="list-group list-group-flush mt-3">
                            @foreach (var discusion in Model.Tendencias)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <a asp-action="HiloDetails"
                                       asp-route-slug="@discusion.SlugForo"
                                       asp-route-foroId="@discusion.IdForo"
                                       asp-route-discId="@discusion.IdDiscusion"
                                       class="text-decoration-none text-dark fw-bold">
                                        @discusion.Titulo
                                    </a>
                                    <span class="badge bg-verde rounded-pill">@discusion.CantidadMensajes</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay hilos en tendencia en este momento.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0 text-center">
                <img id="modalImage" src="" class="img-fluid rounded" alt="Imagen ampliada" />
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
    const lazyImages = document.querySelectorAll("img.lazyload");

    const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const img = entry.target;
                img.src = img.dataset.src;
                img.classList.remove("lazyload");
                obs.unobserve(img);
            }
        });
    });

    lazyImages.forEach(img => observer.observe(img))

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".img-clickable").forEach(function (img) {
            img.addEventListener("click", function () {
                const fullSrc = this.getAttribute("data-full");
                const modalImg = document.getElementById("modalImage");
                modalImg.src = fullSrc;
                const modal = new bootstrap.Modal(document.getElementById("imageModal"));
                modal.show();
            });
        });
    });
</script>
