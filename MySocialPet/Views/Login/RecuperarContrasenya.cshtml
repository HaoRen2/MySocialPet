@model MySocialPet.Models.ViewModel.Autenticacion.RecuperarContrasenyaViewModel
@{
    Layout = "~/Views/Shared/_AuthLayoutPartial.cshtml";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="text-center mb-4">
    <h4>¿Problemas para iniciar sesión?</h4>
    <p class="text-muted">Introduce tu correo y te enviaremos un enlace para recuperar tu cuenta.</p>
</div>

<form asp-action="ForgotPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Correo electrónico</label>
        <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Enviar enlace</button>

    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="Login">← Volver a Iniciar Sesión</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}