@model IEnumerable<MySocialPet.Models.ViewModel.Mascotas.ListaMascotaViewModel>
@{
    ViewData["Title"] = "Mis Mascotas";
}

<div class="container mt-4 mb-5">
    <h2>Mis Mascotas</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var mascota in Model)
        {
            <div class="col">
                <div class="card h-100 pet-card" onclick="location.href='@Url.Action("Details", "Mascota", new { id = mascota.IdMascota })'">
                    @if (mascota.Foto != null && mascota.Foto.Length > 0)
                    {
                        var base64Image = "data:image/jpeg;base64," + Convert.ToBase64String(mascota.Foto);
                        <img src="@base64Image" class="card-img-top pet-card-img" alt="Foto de @mascota.Nombre" />
                    }
                    else
                    {
                        <img src="~/src/defecto.png" class="card-img-top pet-card-img" alt="Sin foto" />
                    }

                    <div class="card-body text-center">
                        <h5 class="card-title">@mascota.Nombre</h5>
                        <p class="card-text">
                            <strong>Raza:</strong> @mascota.NombreRaza<br />
                            <strong>Género:</strong> @mascota.Genero<br />
                            <strong>Nacimiento:</strong> @(mascota.Nacimiento?.ToString("dd/MM/yyyy") ?? "N/A")<br />
                        </p>
                    </div>
                    <div class="card-footer">
                        @if (mascota.Evento != null)
                        {
                            <h4>Evento: @mascota.Evento.Titulo </h4>
                            <p class="card-text">
                                Fecha: @mascota.Evento.FechaHora 
                                <br />
                                Nota: @mascota.Evento.Notas
                            </p>
                        }else
                        {
                            <h2>No hay eventos</h2>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="col">
            <div class="card h-100 text-center shadow-sm anyadir-card" style="min-height: 300px;">
                <a href="@Url.Action("CreateMascota", "Mascota")" class="text-decoration-none text-dark h-100 w-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center h-100">
                        <div class="d-flex justify-content-center align-items-center mb-3" style="width: 100px; height: 100px;">
                            <span style="font-size: 3rem; font-weight: bold;">+</span>
                        </div>
                        <p class="card-text fw-semibold">Añadir nuevo mascota</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
</div>

