@model IEnumerable<MySocialPet.Models.ViewModel.Mascotas.ListaMascotaViewModel>
@{
    ViewData["Title"] = "Mis Mascotas";
}

<div class="container mb-5">
    <h2>Animales</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var animal in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (animal.Foto != null && animal.Foto.Length > 0)
                    {
                        var base64Image = "data:image/jpeg;base64," + Convert.ToBase64String(animal.Foto);
                        <img src="@base64Image" class="card-img-top" alt="Foto de @animal.Nombre" />
                    }
                    else
                    {
                        <img src="foto.jpg" class="card-img-top" alt="Sin foto" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@animal.Nombre</h5>
                        <p class="card-text">
                            <strong>Género:</strong> @animal.Genero<br />
                            <strong>Nacimiento:</strong> @(animal.Nacimiento?.ToString("dd/MM/yyyy") ?? "N/A")<br />
                            <strong>Peso:</strong> @(animal.PesoKg?.ToString("0.00") ?? "N/A") kg<br />
                            <strong>Longitud:</strong> @(animal.LongitudCm?.ToString("0.00") ?? "N/A") cm<br />
                            <strong>BCS:</strong> @(animal.BCS?.ToString("0.0") ?? "N/A")<br />
                            <strong>Esterilizado:</strong> @(animal.Esterilizada ? "Sí" : "No")
                        </p>
                        <a href="@Url.Action("Details", "Animales", new { id = animal.Id })" class="btn btn-primary">Ver detalles</a>
                    </div>
                </div>
            </div>
        }

        <div class="col">
            <div class="card h-100 text-center border border-secondary border-2 shadow-sm" style="min-height: 300px;">
                <a href="@Url.Action("Create", "Animales")" class="text-decoration-none text-dark h-100 w-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center h-100">
                        <div class="d-flex justify-content-center align-items-center mb-3" style="width: 100px; height: 100px;">
                            <span style="font-size: 3rem; font-weight: bold;">+</span>
                        </div>
                        <p class="card-text fw-semibold">Añadir nuevo animal</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>