@model MySocialPet.Models.ViewModel.DetailMascotaViewModel
@{
    ViewData["Title"] = "Detalle de Mascota";
    var mascota = Model.DetailMascota;
    var Evento = Model.Evento;
}

<div class="container pt-nav test">
    <div class="card shadow rounded pb-1">
        <div class="position-absolute top-0 end-0 p-2 d-flex gap-1">
            <a href="@Url.Action("EditMascota", "Mascota", new { id = mascota.IdMascota })"
               class="btn"
               title="Editar">
                <i class="bi bi-pencil"></i>
            </a>
            <a href="@Url.Action("DeleteMascota", "Mascota", new { id = mascota.IdMascota })"
               title="Eliminar"
               class="btn"
               onclick="return confirm('¿Estás seguro de eliminar esta mascota?');">
                <i class="bi bi-trash"></i>
            </a>
            <a href="@Url.Action("SaludRegistro", "Salud", new { id = mascota.IdMascota })"
               title="Salud"
               class="btn">
                <i class="bi bi-heart-pulse"></i>
            </a>
            <a href="@Url.Action("CalendarioEventos", "Salud", new { id = mascota.IdMascota })"
               title="Eventos"
               class="btn">
                <i class="bi bi-calendar2-event"></i>
            </a>
        </div>
        <div class="row g-0">

            <!-- Imagen -->
            <div class="col-md-4 text-center p-3">
                @if (mascota.Foto != null)
                {
                    var base64 = Convert.ToBase64String(mascota.Foto);
                    var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                    <img src="@imgSrc" class="img-fluid rounded" alt="Foto de @mascota.Nombre" />
                }
                else
                {
                    <img src="~/img/sin-foto.png" class="img-fluid rounded" alt="Sin foto" />
                }
                <h3>Próximo Evento</h3>
                @if (Evento != null)
                {
                    <h4>Título: @Evento.Titulo</h4>
                    <p>Fecha: @Evento.FechaHora</p>
                    <p>@Evento.Notas</p>
                }
                else
                {
                    <p class="text-muted">No hay eventos próximos.</p>
                }

            </div>

            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">
                            <h3 class="card-title">@Model.DetailMascota.Nombre</h3>
                            <p class="card-text"><strong>Fecha de Nacimiento:</strong> @mascota.Nacimiento?.ToString("dd/MM/yyyy")</p>
                            <p class="card-text"><strong>Peso:</strong> @mascota.PesoKg kg</p>
                            <p class="card-text"><strong>Longitud:</strong> @mascota.LongitudCm cm</p>
                            <p class="card-text"><strong>Género:</strong> @mascota.Genero</p>
                            <p class="card-text"><strong>BCS:</strong> @mascota.BCS</p>
                            <p class="card-text"><strong>Esterilizado/a:</strong> @(mascota.Esterilizada ? "Sí" : "No")</p>
                            <p class="card-text"><strong>Raza:</strong> @mascota.Raza?.NombreRaza</p>

                        </div>
                    </div>

                    <div class="col-md-6 mt-5">
                        <div class="card-body">
                            <h3 class="card-title">Información Raza</h3>
                            <p class="card-text">
                                <strong>Información:</strong> @mascota.Raza?.Informacion
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            <h5>Notas sobre @mascota.Nombre</h5>
        </div>
        <div class="card-body">
            <form asp-action="AgregarNota" asp-controller="Mascota" method="post">
                <input type="hidden" name="id" value="@mascota.IdMascota" />
                <div class="mb-3">
                    <textarea name="descripcion" class="form-control" placeholder="Escribe una nota..." rows="3" maxlength="150"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar nota</button>
            </form>

            <hr />
            @if (Model.Notas != null && Model.Notas.Any())
            {
                foreach (var nota in Model.Notas)
                {
                    <div class="mb-2">
                        <div class="bg-light p-2 rounded">@nota.Descripcion</div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No hay notas aún.</p>
            }
        </div>
    </div>
</div>